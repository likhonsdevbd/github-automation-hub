# Analytics Orchestrator Environment Variables
# Copy this file to .env and configure with your actual values

# ==============================================================================
# GITHUB INTEGRATION
# ==============================================================================

# GitHub Personal Access Token with required scopes:
# - repo (for repository access)
# - user (for user profile access)  
# - read:org (for organization access)
GITHUB_TOKEN=your_github_token_here

# Webhook secret for GitHub webhook validation
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database URL for SQLite (default) or PostgreSQL
# Examples:
# SQLite: sqlite:///data/analytics.db
# PostgreSQL: postgresql://user:password@localhost:5432/analytics
# MySQL: mysql://user:password@localhost:3306/analytics
DATABASE_URL=sqlite:///data/analytics.db

# ==============================================================================
# CACHE CONFIGURATION  
# ==============================================================================

# Redis URL for cache storage
CACHE_URL=redis://localhost:6379/0

# Secondary Redis URL for additional caching
REDIS_URL=redis://localhost:6379/1

# Redis password (if required)
REDIS_PASSWORD=

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# JWT secret for token signing (generate a strong secret)
JWT_SECRET=your_very_secure_jwt_secret_key_here

# Comma-separated list of API keys for authentication
# Format: key1,key2,key3
API_KEYS=your_api_keys_comma_separated

# Bcrypt rounds for password hashing (12 is recommended)
BCRYPT_ROUNDS=12

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================

# Prometheus monitoring port
PROMETHEUS_PORT=9090

# Grafana admin port
GRAFANA_PORT=3000

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application timezone
TIMEZONE=UTC

# Maximum API requests per minute
API_RATE_LIMIT=1000

# ==============================================================================
# PERFORMANCE CONFIGURATION
# ==============================================================================

# Database pool size
DB_POOL_SIZE=10

# Database max overflow
DB_MAX_OVERFLOW=20

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=50

# ==============================================================================
# GITHUB API CONFIGURATION
# ==============================================================================

# GitHub API base URL (change to GitHub Enterprise URL if needed)
GITHUB_API_BASE_URL=https://api.github.com

# Rate limiting settings
GITHUB_RATE_LIMIT_PER_HOUR=24
GITHUB_RATE_LIMIT_PER_REPOSITORY=5

# Request timeout in seconds
GITHUB_REQUEST_TIMEOUT=30

# Retry attempts for failed requests
GITHUB_RETRY_ATTEMPTS=3

# ==============================================================================
# INTEGRATION CONFIGURATION
# ==============================================================================

# Enable/disable integrations (true/false)
INTEGRATION_HEALTH_MONITORING=true
INTEGRATION_FOLLOW_AUTOMATION=true
INTEGRATION_DAILY_CONTRIBUTIONS=true
INTEGRATION_SECURITY_AUTOMATION=true

# ==============================================================================
# NOTIFICATION CONFIGURATION
# ==============================================================================

# Email settings for notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Discord webhook for notifications  
DISCORD_WEBHOOK_URL=

# ==============================================================================
# DATA RETENTION CONFIGURATION
# ==============================================================================

# Retention periods in days
METRICS_RETENTION_DAYS=90
TIME_SERIES_RETENTION_DAYS=365
LOGS_RETENTION_DAYS=30

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ==============================================================================
# ADVANCED CONFIGURATION
# ==============================================================================

# Worker settings
WORKER_COUNT=4

# Queue sizes
DATA_INGESTION_QUEUE_SIZE=10000
DATA_PROCESSING_QUEUE_SIZE=5000
ANALYTICS_COMPUTATION_QUEUE_SIZE=1000

# Batch processing settings
BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=60

# Memory limits (in MB)
MAX_MEMORY_USAGE=2048
CLEANUP_MEMORY_THRESHOLD=80

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Development-only settings (only used when ENVIRONMENT=development)
DEV_AUTO_RELOAD=true
DEV_PROFILING_ENABLED=false
DEV_MOCK_EXTERNAL_APIS=false